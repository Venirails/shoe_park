<h1>Listing stores</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Size</th>
      <th>Color</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Description</th>
      <th>Features</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.product_name %></td>
        <td><%= store.size %></td>
        <td><%= store.color %></td>
        <td><%= store.brand %></td>
        <td><%= store.price %></td>
        <td><%= store.description %></td>
        <td><%= store.features %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

